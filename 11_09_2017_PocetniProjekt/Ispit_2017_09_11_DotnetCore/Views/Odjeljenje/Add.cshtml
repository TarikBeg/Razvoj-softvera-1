@model OdjeljenjeAddViewModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<form asp-action="Add" method="post">

    <div class="form-group">
        <label>Skolska godina</label>
        <input asp-for="Odjeljenje.SkolskaGodina" class="form-control" />
    </div>


    <div class="form-group">
        <label>Razred</label>
        <input asp-for="Odjeljenje.Razred" class="form-control" />
    </div>


    <div class="form-group">
        <label>Oznaka</label>
        <input asp-for="Odjeljenje.Oznaka" class="form-control" />
    </div>

    <div class="form-group">
        <label>Razrednik</label>
        <select asp-for="Odjeljenje.NastavnikID" asp-items="Model.Razrednici" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Preuzmi ucenike iz nizeg odjeljenja</label>
        <select asp-for="IzabranoOdjeljenje" asp-items="Model.NeprebacenaOdjeljenja" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

